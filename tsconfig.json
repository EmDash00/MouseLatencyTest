{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "esnext",
    "baseUrl": "./src/",
    "target": "es2022",         // "es2022" or higher for top-level await support
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "declaration": false,
    "outDir": "./dist",         // Optional: specify output directory
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],      // Modify to match the folder structure of your files
  "exclude": ["node_modules", "dist"]
}

